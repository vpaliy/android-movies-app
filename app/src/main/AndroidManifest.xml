<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.popularmovies.vpaliy.popularmoviesapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:name=".presentation.App"
        android:theme="@style/AppTheme">

        <activity android:name=".presentation.ui.activity.MoviesActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN">
                </action>
                <category android:name="android.intent.category.LAUNCHER">
                </category>
            </intent-filter>
        </activity>

        <activity android:name=".presentation.ui.activity.DetailsActivity"
                  android:theme="@style/DetailsTheme">
        </activity>

    </application>



</manifest>